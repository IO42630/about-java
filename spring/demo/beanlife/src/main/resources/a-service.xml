<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean name="employee" class="com.olexyn.about.java.spring.demo.beanlife.beans.Employee">
        <!-- Setting the value via config XML - probably not the best idea. -->
        <property name="name" value="Bob"/>
    </bean>
    <bean name="aService" class="com.olexyn.about.java.spring.demo.beanlife.service.AService" init-method="init" destroy-method="destroy">
        <property name="employee" ref="employee"/>
    </bean>
</beans>
